    <div id="background">
        <div id="page">
            {{>header }}
            <div id="contents">
                <div class="box">
                    <div>
                        <div class="body">
                            <h1>Meals</h1>
                            <ul id="foods">
                                {{#each meals}}
                                <li>
                                    <h2><a href="#">{{name}}</a></h2>
                                    <div class="infos">
                                        <a href="#"><img src="images/{{image}}" alt="Img" height="169" width="780"><span class="cover"></span></a>
                                        <p>
                                            <span>{{name}}</span> {{description}}
                                        </p>
                                    </div>
                                </li>
                                {{else}}
                                <li>
                                    <p>No meals available at the moment. Please check back later.</p>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="footer">
            <div>
